                group: "weapon"
                color: {{ colors["weapon"]["text_dark"] }} if root.weapon != 2 else {{ colors["weapon"]["text_light"] }}
                background_color: root.color_invis
                on_press: app.set_weapon(2)

            ToggleButton:
