#:kivy 2.1.0

Carousel:
    loop: True

    FloatLayout:
        BoxLayout: 
            id: weapon_selector
            orientation: 'horizontal'
            size: 640, 100
            size_hint: None, None
            pos: 640, 0

            ToggleButton:
                id: weapon_0
                text: "fleuret"
                font_size: 40
                on_press: app.root.ids["weapon_0"].state = "down"
                on_press: weapon = 0
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]

            ToggleButton:
                id: weapon_1
                text: "epee"
                font_size: 40
                on_press: app.root.ids["weapon_1"].state = "down"
                on_press: weapon = 1
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]

            ToggleButton:
                id: weapon_2
                text: "sabre"
                font_size: 40
                on_press: app.root.ids["weapon_2"].state = "down"
                on_press: weapon = 2
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]

        Label:
            id: score_l
            text: "00"
            font_size: 400
            size: 480, 480
            size_hint: None, None
            pos: 0, 0
            color: [0.8, 0, 0, 1]

        Label:
            id: score_l
            text: "00"
            font_size: 400
            size: 480, 480
            size_hint: None, None
            pos: 1440, 0
            color: [0, 0.8, 0, 1]

        Label:
            id: timer
            text: "0:00"
            font_size: 300
            size: 600, 300
            size_hint: None, None
            pos: 560 + 200, 140
            color: [0.8, 0.8, 0, 1]

        Label:
            id: period
            text: "3"
            font_size: 200
            size: 200, 200
            size_hint: None, None
            pos: 560, 140
            color: [0.1, 0.1, 0.8, 1]

        Label:
            id: priority_l
            text: "P"
            font_size: 100
            size: 100, 100
            size_hint: None, None
            pos: 460, 330
            color: [0.8, 0, 0, 1]

        Button:
            id: warning_top_l
            size: 100, 50
            size_hint: None, None
            pos: 460, 260

            canvas:
                Color:
                    rgba: 1, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            id: warning_bot_l
            size: 100, 50
            size_hint: None, None
            pos: 460, 190

            canvas:
                Color:
                    rgba: 0.8, 0.8, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            id: priority_r
            text: "P"
            font_size: 100
            size: 100, 100
            size_hint: None, None
            pos: 1360, 330
            color: [0, 0.8, 0, 1]

        Button:
            id: warning_top_r
            size: 100, 50
            size_hint: None, None
            pos: 1360, 260

            canvas:
                Color:
                    rgba: 1, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            id: warning_bot_r
            size: 100, 50
            size_hint: None, None
            pos: 1360, 190

            canvas:
                Color:
                    rgba: 0.8, 0.8, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

    Label:
        text: "Video"
    Label:
        text: "Settings"