#:kivy 2.1.0

Carousel:
    loop: True

    FloatLayout:
        BoxLayout:
            id: weapon_selector
            orientation: 'horizontal'
            size: 640, 100
            size_hint: None, None
            pos: 640, 0

            ToggleButton:
                id: weapon_0
                text: "fleuret"
                font_size: 40
                font_name:"agencyb"
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]
                on_press: app.set_weapon(0)

            ToggleButton:
                id: weapon_1
                text: "epee"
                font_size: 40
                font_name:"agencyb"
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]
                on_press: app.set_weapon(1)

            ToggleButton:
                id: weapon_2
                text: "sabre"
                font_size: 40
                font_name:"agencyb"
                group: "weapon"
                color: [0.3, 0.3, 0.3, 1] if self.state == 'normal' else [0.7, 0.7, 0.7, 1]
                background_color: [0, 0, 0, 1] if self.state == 'normal' else [0, 0, 0, 1]
                on_press: app.set_weapon(2)

        Carousel:
            id: left_score_carousel
            direction: "top"
            loop: True
            size: 480, 480
            size_hint: None, None
            pos: 0, 0
            min_move: 0.1

            on_index: app.carousel_handler(args[1], 0)

            Button:
                text: "1"
                on_press: app.carousel_btn_handler(1)

            Button:
                text: "2"
                on_press: app.carousel_btn_handler(1)

            Button:
                text: "3"
                on_press: app.carousel_btn_handler(1)
        Label:
            id: score_l_l
            text: "0"
            font_size: 380
            font_name:"agencyb"
            size: 240, 480
            size_hint: None, None
            pos: 0, 0
            color: [0.8, 0, 0, 1]

        Label:
            id: score_l_r
            text: " "
            font_size: 380
            font_name:"agencyb"
            size: 240, 480
            size_hint: None, None
            pos: 240, 0
            color: [0.8, 0, 0, 1]

        Carousel:
            id: right_score_carousel
            direction: "top"
            loop: True
            size: 480, 480
            size_hint: None, None
            pos: 1440, 0
            min_move: 0.1

            on_index: app.carousel_handler(args[1], 1)

            Button:
                text: "1"
                on_press: app.carousel_btn_handler(1)

            Button:
                text: "2"
                on_press: app.carousel_btn_handler(1)

            Button:
                text: "3"
                on_press: app.carousel_btn_handler(1)

        Label:
            id: score_r_l
            text: " "
            font_size: 380
            font_name:"agencyb"
            size: 240, 480
            size_hint: None, None
            pos: 1440, 0
            color: [0, 0.8, 0, 1]

        Label:
            id: score_r_r
            text: "0"
            font_size: 380
            font_name:"agencyb"
            size: 240, 480
            size_hint: None, None
            pos: 1680, 0
            color: [0, 0.8, 0, 1]

        Label:
            id: timer
            text: "0:00"
            font_size: 300
            size: 600, 300
            size_hint: None, None
            pos: 560 + 200, 140
            color: [0.8, 0.8, 0, 1]

        Label:
            id: period
            text: "3"
            font_size: 200
            size: 200, 200
            size_hint: None, None
            pos: 560, 140
            color: [0.1, 0.1, 0.8, 1]

        Label:
            id: priority_l
            text: "P"
            font_size: 100
            size: 100, 100
            size_hint: None, None
            pos: 460, 330
            color: [0.8, 0, 0, 1]

        ToggleButton:
            id: warning_top_l
            size: 100, 50
            size_hint: None, None
            pos: 460, 260

            background_color: [1, 0.5, 0.5, 1] if self.state == 'normal' else [0.8, 0, 0, 1]

            background_down: ""
            background_normal: ""

        ToggleButton:
            id: warning_bot_l
            size: 100, 50
            size_hint: None, None
            pos: 460, 190

            background_color: [0.6, 0.6, 0.2, 1] if self.state == 'normal' else [0.8, 0.8, 0, 1]

            background_down: ""
            background_normal: ""

        Label:
            id: priority_r
            text: "P"
            font_size: 100
            size: 100, 100
            size_hint: None, None
            pos: 1360, 330
            color: [0, 0.8, 0, 1]

        ToggleButton:
            id: warning_top_r
            size: 100, 50
            size_hint: None, None
            pos: 1360, 260

            background_color: [1, 0.5, 0.5, 1] if self.state == 'normal' else [0.8, 0, 0, 1]

            background_down: ""
            background_normal: ""

        ToggleButton:
            id: warning_bot_r
            size: 100, 50
            size_hint: None, None
            pos: 1360, 190

            background_color: [0.6, 0.6, 0.2, 1] if self.state == 'normal' else [0.8, 0.8, 0, 1]

            background_down: ""
            background_normal: ""

    Label:
        text: "Video"
    TabbedPanel:
        TabbedPanelItem:
            text: "hardware"
            BoxLayout:
                Button:
                    text: "sync hardware"
                    on_press:
        TabbedPanelItem:
            text: 'tab2'
            BoxLayout:
                Label:
                    text: 'Second tab content area'
                Button:
                    text: 'Button that does nothing'
        TabbedPanelItem:
            text: 'tab3'
            RstDocument:
                text:
                    '\\n'.join(("Hello world", "-----------",
                    "You are in the third tab."))
    Label:
        id: test_output
        text: "ABOBUS"
